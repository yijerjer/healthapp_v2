<h3>schedule#new page</h3>

<%= form_for :schedule, url: schedules_path do |f| %>
  <%= f.check_box :use_user_location %>
  <%= f.label "Use your city" %>

  <div class="location-fields">
    <%= f.select :country, get_countries.map { |key, value| [value, key] }, {}, { class: "country-select" } %>
    <%= f.select :state, {}, {}, { disabled: true, class: "state-select" } %>
    <%= f.text_field :city, { disabled: true, class: "city-select" } %>
  </div>

  <%= f.select :activity_id, Activity.all.map { |activity| [activity.name, activity.id] } %>
  <%= f.date_field :date %>
  <%= f.time_field :time %>

  <%= f.submit "Create" %>
<% end %>
